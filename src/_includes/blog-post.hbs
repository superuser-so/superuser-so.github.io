<article class="max-w-4xl mx-auto px-4 py-16">
  <header class="mb-8">
    <div class="mb-4">
      <a href="/blog/" class="text-primary-600 hover:text-primary-700 font-medium">&larr; Back to Blog</a>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{title}}</h1>
    <div class="flex items-center text-gray-600 space-x-4">
      {{#if author}}
      <span>By {{author}}</span>
      {{/if}}
      {{#if date}}
      <span>•</span>
      <time datetime="{{date}}">{{date}}</time>
      {{/if}}
      {{#if tags}}
      <span>•</span>
      <div class="flex gap-2">
        {{#each tags}}
        <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">{{this}}</span>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </header>

  {{#if excerpt}}
  <div class="text-xl text-gray-600 mb-8 pb-8 border-b border-gray-200">
    {{excerpt}}
  </div>
  {{/if}}

  <div class="prose prose-lg max-w-none">
    {{{content}}}
  </div>
</article>
